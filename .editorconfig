# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
max_line_length = 80

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 80

# JavaScript/TypeScript files
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2
max_line_length = 80

# JSON files (package.json, package-lock.json excluded from line length)
[*.json]
indent_style = space
indent_size = 2

[package*.json]
max_line_length = off

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
max_line_length = 80

# SQL files
[*.sql]
indent_style = space
indent_size = 2
max_line_length = 80

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 80

# Prisma schema
[*.prisma]
indent_style = space
indent_size = 2
max_line_length = 80
